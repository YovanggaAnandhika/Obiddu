                                        android:layout_height="70dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginRight="10dp"
                                        app:cardCornerRadius="10dp">

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginRight="10dp"
