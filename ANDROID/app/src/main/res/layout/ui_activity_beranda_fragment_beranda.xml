                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:scrollbarSize="0dp"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
